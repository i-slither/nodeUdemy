extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")
    
block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://media.gettyimages.com/photos/stack-of-books-picture-id157482029?s=612x612", alt="A Book")
                        .card__content
                            h2.product__price $19.99
                            p.product__description A very interesting so many events
                        .card__actions
                            button.btn Add to cart          
        else
            h1 No Products                    